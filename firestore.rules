        allow update: if request.auth != null && resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows users to manage their own quiz results.
     * @path /quizResults/{resultId}
     */
    match /quizResults/{resultId} {
        allow get: if request.auth != null && resource.data.userId == request.auth.uid;
        allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update: if request.auth != null && resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows users to manage their own calendar events.
     * @path /calendarEvents/{eventId}
     */
    match /calendarEvents/{eventId} {
        allow get: if request.auth != null && resource.data.userId == request.auth.uid;
        allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update: if request.auth != null && resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Allows squad members to access squad data.
     * @path /squads/{squadId}
     */
    match /squads/{squadId} {
        allow get: if request.auth != null && request.auth.uid in resource.data.members;
        allow list: if request.auth != null && request.query.where.members.array_contains == request.auth.uid;
        allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
        allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
        allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    /**
     * @description Allows users to manage their own podcast episodes.
