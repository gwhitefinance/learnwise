
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for user-specific data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /courses/{courseId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /notes/{noteId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    match /projects/{projectId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /recentFiles/{fileId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    match /calendarEvents/{eventId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /quizAttempts/{attemptId} {
        allow read, write: if isOwner(resource.data.userId);
    }
    
    match /quizResults/{resultId} {
        allow read, write: if isOwner(resource.data.userId);
    }
    
    match /chatSessions/{sessionId} {
      allow read, write: if isOwner(resource.data.userId);
      // Allow public read if isPublic is true
      allow get: if resource.data.isPublic == true;
    }

    // Rules for collaborative data
    match /squads/{squadId} {
        allow read: if request.auth.uid in resource.data.members;
        allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.ownerId;
        allow update, delete: if isOwner(resource.data.ownerId);

        match /memberDetails/{memberId} {
            allow read: if request.auth.uid in get(/databases/$(database)/documents/squads/$(squadId)).data.members;
            allow write: if isOwner(get(/databases/$(database)/documents/squads/$(squadId)).data.ownerId);
        }

        match /projects/{projectId} {
             allow read, write: if request.auth.uid in get(/databases/$(database)/documents/squads/$(squadId)).data.members;
        }
    }
    
    // Teacher-specific rules
    match /classes/{classId} {
      allow read, write: if isOwner(resource.data.ownerId);
    }
    
    match /satTestResults/{resultId} {
        allow read, write: if isOwner(resource.data.userId);
    }
  }
}
