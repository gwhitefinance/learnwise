
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default: Deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data in most collections
    // This is a common pattern for user-owned data.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }
    
    match /courses/{courseId} {
      allow read, write: if request.auth.uid == request.resource.data.userId;
    }
    
    match /notes/{noteId} {
      allow read, write: if request.auth.uid == request.resource.data.userId;
    }
    
    match /projects/{projectId} {
       allow read, write: if request.auth.uid == request.resource.data.userId;
    }
    
    match /recentFiles/{fileId} {
        allow read, write: if request.auth.uid == request.resource.data.userId;
    }
    
    match /calendarEvents/{eventId} {
        allow read, write: if request.auth.uid == request.resource.data.userId;
    }

    match /quizAttempts/{attemptId} {
        allow read, write: if request.auth.uid == request.resource.data.userId;
    }

    // Chat sessions are special.
    // A user can read/write their OWN chat sessions.
    match /chatSessions/{sessionId} {
      allow read, write: if request.auth.uid == resource.data.userId;

      // Anyone can read a chat session IF it is marked as public.
      // This rule is additive to the one above it.
      allow get: if resource.data.isPublic == true;
    }
  }
}
