
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /courses/{courseId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /notes/{noteId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /projects/{projectId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /recentFiles/{fileId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    match /chatSessions/{sessionId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /calendarEvents/{eventId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    match /quizAttempts/{attemptId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Allow querying collections by userId
    match /{path=**}/courses/{courseId} {
      allow list: if request.auth.uid != null && request.query.resource.data.userId == request.auth.uid;
    }
     match /{path=**}/notes/{noteId} {
      allow list: if request.auth.uid != null && request.query.resource.data.userId == request.auth.uid;
    }
     match /{path=**}/projects/{projectId} {
      allow list: if request.auth.uid != null && request.query.resource.data.userId == request.auth.uid;
    }
     match /{path=**}/recentFiles/{fileId} {
      allow list: if request.auth.uid != null && request.query.resource.data.userId == request.auth.uid;
    }
     match /{path=**}/chatSessions/{sessionId} {
      allow list: if request.auth.uid != null && request.query.resource.data.userId == request.auth.uid;
    }
    match /{path=**}/calendarEvents/{eventId} {
      allow list: if request.auth.uid != null && request.query.resource.data.userId == request.auth.uid;
    }
     match /{path=**}/quizAttempts/{attemptId} {
      allow list: if request.auth.uid != null && request.query.resource.data.userId == request.auth.uid;
    }
  }
}
