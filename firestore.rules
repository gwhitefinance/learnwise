
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own chat sessions.
    match /chatSessions/{sessionId} {
      allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only access their own courses.
    match /courses/{courseId} {
        allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Users can only access their own calendar events.
    match /calendarEvents/{eventId} {
        allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Users can only access their own notes.
    match /notes/{noteId} {
        allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Users can only access their own projects.
    match /projects/{projectId} {
        allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only access their own recent files.
    match /recentFiles/{fileId} {
        allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Users can only access their own roadmaps.
    match /roadmaps/{roadmapId} {
        allow read, write, create, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
