
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read/write their own data in these collections
    match /(courses|notes|calendarEvents|chatSessions|projects|recentFiles|quizAttempts)/{docId} {
      allow read, write, delete, create: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow users to manage their own user profile document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }
  }
}
