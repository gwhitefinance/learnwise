
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Previous rules...
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    match /courses/{courseId} {
        allow read: if resource.data.userId == request.auth.uid;
        allow write: if request.resource.data.userId == request.auth.uid;
    }

    match /notes/{noteId} {
        allow read, write: if request.resource.data.userId == request.auth.uid;
    }

    match /projects/{projectId} {
        allow read, write: if request.resource.data.userId == request.auth.uid;
    }

    match /recentFiles/{fileId} {
        allow read, write: if request.resource.data.userId == request.auth.uid;
    }

    match /calendarEvents/{eventId} {
        allow read, write: if request.resource.data.userId == request.auth.uid;
    }

    match /quizAttempts/{attemptId} {
      allow read, write: if request.resource.data.userId == request.auth.uid;
    }

    match /satTestResults/{resultId} {
      allow read: if resource.data.userId == request.auth.uid;
      allow create: if request.resource.data.userId == request.auth.uid;
    }
    
    match /quizResults/{resultId} {
      allow read, write: if request.resource.data.userId == request.auth.uid;
    }

    match /chatSessions/{sessionId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    
    match /roadmaps/{roadmapId} {
      allow read, write: if request.resource.data.userId == request.auth.uid;
    }

    match /squads/{squadId} {
      allow read: if request.auth.uid in resource.data.members;
      allow create: if request.resource.data.ownerId == request.auth.uid && request.auth.uid in request.resource.data.members;
      allow update, delete: if resource.data.ownerId == request.auth.uid;
    }
  }
}
