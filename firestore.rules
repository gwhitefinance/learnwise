
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can read their own profile, but can only create one for themselves.
    // No one can update or delete user profiles from the client.
    match /users/{userId} {
      allow read, create: if isOwner(userId);
      allow update, delete: if false;
    }

    // Secure the chatSessions collection
    match /chatSessions/{sessionId} {
      allow create: if isOwner(request.resource.data.userId);
      allow read, update, delete: if isOwner(resource.data.userId);
      // Users can list their own chats, but not anyone else's
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
    }

    // Generic rule for other user-owned content
    match /{collection}/{docId} where collection in ['courses', 'projects', 'notes', 'recentFiles', 'calendarEvents', 'quizAttempts', 'roadmaps'] {
      allow create: if isOwner(request.resource.data.userId);
      allow read, update, delete: if isOwner(resource.data.userId);
      allow list: if request.auth != null
                  && request.query.where('userId', '==', request.auth.uid).exists();
    }
  }
}
